<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_dest_tab_worldmap"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/destina_head_nobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="37dp"
        android:button="@null"
        android:drawableTop="@drawable/destinationheadrabtn"
        android:textSize="0dp" />

    <TextView
        android:id="@+id/destina_head_notxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/destina_head_nobtn"
        android:layout_alignRight="@id/destina_head_nobtn"
        android:layout_alignTop="@id/destina_head_nobtn"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:text="北美洲" />


    <RadioButton
        android:id="@+id/destina_head_sabtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:button="@null"
        android:drawableTop="@drawable/destinationheadrabtn"
        android:textSize="0dp" />

    <TextView
        android:id="@+id/destina_head_satxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/destina_head_sabtn"
        android:layout_alignRight="@id/destina_head_sabtn"
        android:layout_alignTop="@id/destina_head_sabtn"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:text="南美洲" />

    <RadioButton
        android:id="@+id/destina_head_eurbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp"
        android:button="@null"
        android:drawableTop="@drawable/destinationheadsmallrebtn"
        android:textSize="0dp" />

    <TextView
        android:id="@+id/destina_head_eurtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/destina_head_eurbtn"
        android:layout_alignRight="@id/destina_head_eurbtn"
        android:layout_alignTop="@id/destina_head_eurbtn"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:text="欧洲" />

    <RadioButton
        android:id="@+id/destina_head_afbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="98dp"
        android:button="@null"
        android:drawableTop="@drawable/destinationheadsmallrebtn"
        android:textSize="0dp" />

    <TextView
        android:id="@+id/destina_head_aftxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/destina_head_afbtn"
        android:layout_alignRight="@id/destina_head_afbtn"
        android:layout_alignTop="@id/destina_head_afbtn"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:text="非洲" />

    <RadioButton
        android:id="@+id/destina_head_asbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="25dp"
        android:button="@null"
        android:drawableTop="@drawable/destinationheadsmallrebtn"
        android:textSize="0dp" />

    <TextView
        android:id="@+id/destina_head_astxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/destina_head_asbtn"
        android:layout_alignRight="@id/destina_head_asbtn"
        android:layout_alignTop="@id/destina_head_asbtn"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:text="亚洲" />


    <RadioButton
        android:id="@+id/destina_head_ocbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="100dp"
        android:button="@null"
        android:drawableTop="@drawable/destinationheadrabtn"
        android:textSize="0dp" />

    <TextView
        android:id="@+id/destina_head_octxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/destina_head_ocbtn"
        android:layout_alignRight="@id/destina_head_ocbtn"
        android:layout_alignTop="@id/destina_head_ocbtn"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:text="大洋洲" />

    <RadioButton
        android:id="@+id/destina_head_anbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="165dp"
        android:button="@null"
        android:drawableTop="@drawable/destinationheadrabtn"
        android:textSize="0dp" />

    <TextView
        android:id="@+id/destina_head_antxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/destina_head_anbtn"
        android:layout_alignRight="@id/destina_head_anbtn"
        android:layout_alignTop="@id/destina_head_anbtn"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:text="南极洲" />


</RelativeLayout>