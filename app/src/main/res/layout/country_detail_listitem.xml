<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/country_detail_list_item_simview"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:placeholderImage="@mipmap/ic_launcher"
        app:viewAspectRatio="1.25" />

    <TextView
        android:id="@+id/country_detail_list_item_titletxt"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/country_detail_list_item_simview"
        android:layout_alignTop="@id/country_detail_list_item_simview"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/country_detail_list_item_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/country_detail_list_item_simview"
        android:layout_alignBottom="@id/country_detail_list_item_simview"
        android:textColor="#FF0000"/>

    <TextView
        android:id="@+id/country_detail_list_item_privce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1500"
        android:textColor="#FF0000"
        android:layout_toLeftOf="@+id/country_detail_list_item_pri"
        android:layout_alignBottom="@id/country_detail_list_item_simview"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/country_detail_list_item_pri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_alignBottom="@id/country_detail_list_item_simview"
        android:layout_alignParentRight="true"
        android:text="元起"/>


</RelativeLayout>