<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sale_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewAspectRatio="1.5"/>
    <TextView
        android:id="@+id/sale_title_txt"
        android:layout_below="@id/sale_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="15dp"
        android:textColor="@android:color/black" />
    <TextView
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/yuan_txt"
        android:layout_below="@id/sale_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="元起"/>

    <TextView
        android:layout_toLeftOf="@id/yuan_txt"
        android:layout_below="@id/sale_title_txt"
        android:id="@+id/sale_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#fe7562"
        />

    <TextView
        android:layout_alignBottom="@id/sale_price_txt"
        android:id="@+id/sale_discount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#fe7562" />


</RelativeLayout>