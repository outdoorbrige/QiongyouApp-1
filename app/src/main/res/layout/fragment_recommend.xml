<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiaohan_lh.qiongyouapp.fragment.RecommendFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/head_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/next_station_revommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <include
            layout="@layout/sale_layout_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            layout="@layout/list_veiw_recommend"
            android:layout_width="match_parent"
            android:layout_height="900dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
</ScrollView>
