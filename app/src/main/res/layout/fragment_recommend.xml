<com.example.xiaohan_lh.qiongyouapp.customize.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiaohan_lh.qiongyouapp.fragment.RecommendFragment">

        <com.example.xiaohan_lh.qiongyouapp.customize.BottomScrollView
            android:id="@+id/scroll_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/head_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/next_station_revommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/sale_layout_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/list_veiw_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:padding="10dp"
                    android:id="@+id/bottom_layout"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/bottom_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/loading_anim"
                        android:background="@mipmap/ic_loading_yuan_white"/>
                    <TextView
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在加载"/>
                </LinearLayout>

            </LinearLayout>
        </com.example.xiaohan_lh.qiongyouapp.customize.BottomScrollView>
</com.example.xiaohan_lh.qiongyouapp.customize.RefreshLayout>