<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/country_detail_grid_item_simview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:placeholderImage="@mipmap/zbg_cover_def_small9"
        app:viewAspectRatio="1.33"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignBottom="@id/country_detail_grid_item_simview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/country_detail_grid_item_cnname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="中国"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/country_detail_grir_item_enname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:text="China"
            android:textSize="15dp"/>
    </LinearLayout>

</RelativeLayout>